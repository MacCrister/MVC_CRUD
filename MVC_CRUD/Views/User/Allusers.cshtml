@model IEnumerable<MVC_CRUD.Models.User>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "All users";
}
<h2>Registerd Users</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>User Id</th>
            <th>First Name</th>
            <th>Middle Name</th>
            <th>Last Name</th>
            <th>Gender</th>
            <th>Address</th>
            <th>Email Address</th>
            <th>Contact Number</th>
            <th colspan="2">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserId</td>
                    <td>@user.fName</td>
                    <td>@user.mName</td>
                    <td>@user.lName</td>
                    <td>@user.gender</td>
                    <td>@user.address</td>
                    <td>@user.emailAddress</td>
                    <td>@user.contactNo</td>
                    <td><a href="#" class="text-info">Edit</a></td>
                    <td><a href="#" class="text-danger">Delete</a></td>
                </tr>
            }
    </tbody>
</table>
