@model MVC_CRUD.Models.User
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Registration Form";
}
<h2>Registration Form</h2>

<form asp-action="register" method="post">
    <div class="form-group">
        <label class="form-label">First Name</label>
        <input class="form-control" asp-for="fName" />
        <span class="text-danger" asp-validation-for="fName"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Middle Name</label>
        <input class="form-control" asp-for="mName" />
        <span class="text-danger" asp-validation-for="mName"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Last Name</label>
        <input class="form-control" asp-for="lName" />
        <span class="text-danger" asp-validation-for="lName"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Gender</label>
        <input class="form-control" asp-for="gender" />
        <span class="text-danger" asp-validation-for="gender"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Address</label>
        <input class="form-control" asp-for="address" />
        <span class="text-danger" asp-validation-for="address"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Email Address</label>
        <input class="form-control" asp-for="emailAddress" />
        <span class="text-danger" asp-validation-for="emailAddress"></span>
    </div>
    <div class="form-group">
        <label class="form-label">Contact Number</label>
        <input class="form-control" asp-for="contactNo" />
        <span class="text-danger" asp-validation-for="contactNo"></span>
    </div>
    <button type="submit" class="btn btn-primary"> Submit</button>
</form>